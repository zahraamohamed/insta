<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/lightblack"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin1x"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/story_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="@dimen/txtSizeStory"
        app:layout_constraintStart_toStartOf="@id/story_img"
        app:layout_constraintEnd_toEndOf="@id/story_img"
        app:layout_constraintTop_toBottomOf="@id/story_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>